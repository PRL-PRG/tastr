%code {
    #include "ParsingContext.h"
    #include "Lexer.hpp"
    #undef yylex
    #define yylex lexer.yylex
}

%%

scalartype:         INTEGER                                 {
                                                                $$ = new IntegerScalarTypeNode();
                                                                $$ -> set_location(@1);
                                                            }
          |         DOUBLE                                  {
                                                                $$ = new DoubleScalarTypeNode();
                                                                $$ -> set_location(@1);
                                                            }
          |         COMPLEX                                 {
                                                                $$ = new ComplexScalarTypeNode();
                                                                $$ -> set_location(@1);
                                                            }
          |         CHARACTER                               {
                                                                $$ = new CharacterScalarTypeNode();
                                                                $$ -> set_location(@1);
                                                            }
          |         LOGICAL                                 {
                                                                $$ = new LogicalScalarTypeNode();
                                                                $$ -> set_location(@1);
                                                            }
          |         RAW                                     {
                                                                $$ = new RawScalarTypeNode();
                                                                $$ -> set_location(@1);
                                                            }
          ;

environmenttype:    ENVIRONMENT                             {
                                                                $$ = new EnvironmentTypeNode();
                                                                $$ -> set_location(@1);
                                                            }
               ;

expressiontype:     EXPRESSION                              {
                                                                $$ = new ExpressionTypeNode();
                                                                $$ -> set_location(@1);
                                                            }
              ;

languagetype:       LANGUAGE                                {
                                                                $$ = new LanguageTypeNode();
                                                                $$ -> set_location(@1);
                                                            }
            ;

symboltype:         SYMBOL                                  {
                                                                $$ = new SymbolTypeNode();
                                                                $$ -> set_location(@1);
                                                            }
          ;

vectortype:         scalartype "[" "]"                      {
                                                                ScalarTypeNodeUPtr scalar_type($1);
                                                                $$ = new VectorTypeNode(std::move(scalar_type));
                                                                $$ -> set_location(@$);
                                                            }
          ;

nonavectortype:     "!" vectortype                          {
                                                                VectorTypeNodeUPtr vector_type($2);
                                                                $$ = new NoNaTypeNode(std::move(vector_type));
                                                                $$ -> set_location(@$);
                                                            }
              ;

listtype:           "((" typeseq "))"                       {
                                                                $$ = new ListTypeNode(std::move(*$2));
                                                                $$ -> set_location(@$);
                                                            }
        ;

typeseq:            %empty                                  {
                                                                $$ = new TypeNodeSequence();
                                                            }
       |            type                                    {
                                                                TypeNodeUPtr type($1);
                                                                $$ = new TypeNodeSequence();
                                                                $$ -> push_back(std::move(type));
                                                            }
       |            typeseq "," type                        {
                                                                TypeNodeUPtr type($3);
                                                                $1 -> push_back(std::move(type));
                                                                $$ = $1;
                                                            }
       ;

structtype:         "{{" namedtypeseq "}}"                  {
                                                                $$ = new StructTypeNode(std::move(*$2));
                                                                $$ -> set_location(@$);
                                                            }
          ;


identifier:         INTEGER                                 {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
          |         DOUBLE                                  {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
          |         COMPLEX                                 {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
          |         CHARACTER                               {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
          |         LOGICAL                                 {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
          |         RAW                                     {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
          |         ENVIRONMENT                             {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
          |         EXPRESSION                              {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
          |         LANGUAGE                                {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
          |         SYMBOL                                  {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
          |         TYPEDECL                                {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
          |         VARARG                                  {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
          |         IDENTIFIER                              {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
          ;

namedtype:          identifier ":" type                     {
                                                                IdentifierNodeUPtr ident($1);
                                                                TypeNodeUPtr type($3);
                                                                $$ = new TagTypePairNode(std::move(ident), std::move(type));
                                                                $$ -> set_location(@$);
                                                            }
         ;

namedtypeseq:       %empty                                  {
                                                                $$ = new TagTypePairNodeSequence();
                                                            }
            |       namedtype                               {
                                                                TagTypePairNodeUPtr named_type($1);
                                                                $$ = new TagTypePairNodeSequence();
                                                                $$ -> push_back(std::move(named_type));
                                                            }
            |       namedtypeseq "," namedtype              {
                                                                TagTypePairNodeUPtr named_type($3);
                                                                $1 -> push_back(std::move(named_type));
                                                                $$ = $1;
                                                            }
            ;


paramtype:          type                                    {
                                                                $$ = $1;
                                                                $$ -> set_location(@1);
                                                            }
         |          "..."                                   {
                                                                $$ = new VarargTypeNode();
                                                                $$ -> set_location(@1);
                                                            }
         ;

paramtypeseq:       %empty                                  {
                                                                $$ = new TypeNodeSequence();
                                                            }
            |       paramtype                               {
                                                                TypeNodeUPtr type($1);
                                                                $$ = new TypeNodeSequence();
                                                                $$ -> push_back(std::move(type));
                                                            }
            |       paramtypeseq "," paramtype              {
                                                                TypeNodeUPtr type($3);
                                                                $1 -> push_back(std::move(type));
                                                                $$ = $1;
                                                            }
            ;

functiontype:       "<" paramtypeseq ">" "=>" type          {
                                                                TypeNodeSequenceUPtr parameter_types($2);
                                                                TypeNodeUPtr return_type($5);
                                                                $$ = new FunctionTypeNode(std::move(parameter_types), std::move(return_type));
                                                                $$ -> set_location(@$);
                                                            }

grouptype:          "(" type ")"                            {
                                                                TypeNodeUPtr type($2);
                                                                $$ = new GroupTypeNode(std::move(type));
                                                                $$ -> set_location(@$);
                                                            }
         ;

nonuniontype:       scalartype                              {
                                                                $$ = $1;
                                                                $$ -> set_location(@$);
                                                            }
            |       environmenttype                         {
                                                                $$ = $1;
                                                                $$ -> set_location(@$);
                                                            }
            |       expressiontype                          {
                                                                $$ = $1;
                                                                $$ -> set_location(@$);
                                                            }
            |       languagetype                            {
                                                                $$ = $1;
                                                                $$ -> set_location(@$);
                                                            }
            |       symboltype                              {
                                                                $$ = $1;
                                                                $$ -> set_location(@$);
                                                            }
            |       vectortype                              {
                                                                $$ = $1;
                                                                $$ -> set_location(@$);
                                                            }
            |       nonavectortype                          {
                                                                $$ = $1;
                                                                $$ -> set_location(@$);
                                                            }
            |       functiontype                            {
                                                                $$ = $1;
                                                                $$ -> set_location(@$);
                                                            }
            |       structtype                              {
                                                                $$ = $1;
                                                                $$ -> set_location(@$);
                                                            }
            |       listtype                                {
                                                                $$ = $1;
                                                                $$ -> set_location(@$);
                                                            }
            |       grouptype                               {
                                                                $$ = $1;
                                                                $$ -> set_location(@$);
                                                            }
            ;


type:               nonuniontype                            {
                                                                $$ = $1;
                                                                $$ -> set_location(@$);
                                                            }
    |               type "|" nonuniontype                   {
                                                                TypeNodeUPtr left_type($1);
                                                                TypeNodeUPtr right_type($3);
                                                                $$ = new UnionTypeNode(std::move(left_type), std::move(right_type));
                                                                $$ -> set_location(@$);
                                                            }
    ;


funname:            INTEGER                                 {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
       |            DOUBLE                                  {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
       |            COMPLEX                                 {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
       |            CHARACTER                               {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
       |            LOGICAL                                 {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
       |            RAW                                     {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
       |            ENVIRONMENT                             {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
       |            EXPRESSION                              {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
       |            LANGUAGE                                {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
       |            SYMBOL                                  {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
       |            TYPEDECL                                {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
       |            IDENTIFIER                              {
                                                                $$ = new IdentifierNode($1);
                                                                $$ -> set_location(@1);
                                                            }
       ;


decltype:           TYPEDECL funname type ";"               {
                                                                IdentifierNodeUPtr identifier($2);
                                                                TypeNodeUPtr type($3);
                                                                $$ = new TypeDeclarationNode(std::move(identifier), std::move(type));
                                                                $$ -> set_location(@$);
                                                            }
        ;

decllist:           decltype                                {
                                                                TypeDeclarationNodeUPtr type_decl($1);
                                                                context.get_type_declaration_sequence() -> push_back(std::move(type_decl));
                                                            }
        |           decllist decltype                       {
                                                                TypeDeclarationNodeUPtr type_decl($2);
                                                                context.get_type_declaration_sequence() -> push_back(std::move(type_decl));
                                                            }
        ;

start:              EOF                                     { }
     |              decllist EOF                            { }
     ;

%%

void tastr::parser::Parser::error(const location_type& location, const std::string& message) {
    std::cout << "Parser Error: " << location << " :: " << message << std::endl;
}
